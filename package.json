{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cpx2": "^8.0.0",
    "esbuild": "^0.25.9"
  },
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./web/src/styles/in.css -o ./web/out/stylesheet.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./web/src/styles/in.css -o ./web/out/stylesheet.css --watch --minify",
    "build:ts": "esbuild $(find web/src/ts -name '*.ts' -type f) --bundle --outdir=web/out --sourcemap --format=esm --splitting --minify",
    "watch:ts": "esbuild $(find web/src/ts -name '*.ts' -type f) --bundle --outdir=web/out --sourcemap --format=esm --splitting --watch",
    "build:html": "cpx \"web/src/**/*.html\" web/out",
    "watch:html": "cpx \"web/src/**/*.html\" web/out --watch --verbose",
    "build:assets": "cpx \"web/src/public/**/*\" web/out/public",
    "watch:assets": "cpx \"web/src/public/**/*\" web/out/public --watch --verbose",
    "build": "npm run build:html && npm run build:ts && npm run build:css && npm run build:assets",
    "dev": "concurrently -k -n html,ts,css,assets \"npm:watch:html\" \"npm:watch:ts\" \"npm:watch:css\" \"npm:watch:assets\"",
    "serve": "go run .",
    "godev": "wgo run -file=out/ -file=src/ .",
    "dev:all": "concurrently -k -n assets,server \"npm:dev\" \"npm:godev\""
  }
}
